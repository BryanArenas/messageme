<h2 class="ui center aligned large header">
  Edit <%= resource_name.to_s.humanize %>
</h2>

<div class="ui placeholder segment">
  <div class="ui very relaxed stackable grid">
    <div class="column">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :username, "Display Name" %><br />
          <div class="ui left input">
          <%= f.text_field :username, autofocus: true, placeholder: "Display Name" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :name %><br />
          <div class="ui left input">
          <%= f.text_field :name, placeholder: "First Name" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :last_name %><br />
          <div class="ui left input">
          <%= f.text_field :last_name, placeholder: "Last Name" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <div class="ui left input">
          <%= f.email_field :email, placeholder: "Email" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
          <div class="ui left input">
          <%= f.password_field :password, placeholder: "New Password" %>
          </div>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
          <br>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <div class="ui left input">
          <%= f.password_field :password_confirmation, placeholder: "Re-enter Password" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
          <div class="ui left input">
          <%= f.password_field :current_password, placeholder: "Current Password" %>
          </div>
        </div>
        <br>
        <div class="actions">
          <%= f.submit "Accept Changes", class: "ui blue button submit" %>
        </div>
      <% end %>
<br>

<%= button_to "Delete Account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "ui button red submit" %></p>

<%= link_to "Back", :back, class: "button ui submit" %>
</div>
